
@model RegisterVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<form method="post">
    <input hidden asp-for="@Model.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            First Name:
            <input asp-for="@Model.FirstName" readonly class="form-control" />
        </div>
        <div class="row pb-4">
            Last Name:
            <input asp-for="@Model.LastName" readonly class="form-control" />
        </div>
        <div class="row pb-4">
            Email:
            <input asp-for="@Model.Email" readonly class="form-control" />
        </div>
        <div class="row pb-4">
            Password:
            <input asp-for="@Model.Password" readonly class="form-control" />
        </div>
        <button type="submit" class=" btn btn-primary" asp-controller="Account" asp-action="Delete">Delete</button>
        <a asp-page="/UserDetails/Details" class="btn btn-secondary">Back to list</a>
    </div>

</form>