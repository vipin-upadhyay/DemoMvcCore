@model RegisterVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<form method="post">
    <input hidden asp-for="@Model.Id" />
    <div class=" text-danger" asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            First Name:
            <input asp-for="@Model.FirstName" class="form-control" />

            <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
        </div>
        <div class="row pb-4">
            Last Name:
            <input asp-for="@Model.LastName" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.LastName"></span>
        </div>
        <div class="row pb-4">
            Email:
            <input asp-for="@Model.Email" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="row pb-4">
            Password:
            <input asp-for="@Model.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <button type="submit" class=" btn btn-primary" asp-controller="Account" asp-action="Edit">Update</button>
        <a asp-page="/UserDetails/Details" class="btn btn-secondary">Back to list</a>
    </div>

</form>
